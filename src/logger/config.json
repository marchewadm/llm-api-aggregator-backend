{
  "version": 1,
  "formatters": {
    "simple": {
      "format": "%(levelname)s: %(message)s",
      "datefmt": "%Y-%m-%dT%H:%M:%S"
    },
    "detailed": {
      "format": "[%(asctime)s at %(pathname)s] %(levelname)s: %(message)s",
      "datefmt": "%Y-%m-%dT%H:%M:%S"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "formatter": "simple",
      "level": "INFO",
      "stream": "ext://sys.stdout"
    },
    "file": {
      "class": "logging.handlers.RotatingFileHandler",
      "filename": "src/logger/logs/app.log",
      "formatter": "detailed",
      "level": "WARNING",
      "backupCount": 3,
      "maxBytes": 10485760
    }
  },
  "loggers": {
    "root": {
      "level": "INFO",
      "handlers": [
        "console",
        "file"
      ]
    }
  }
}